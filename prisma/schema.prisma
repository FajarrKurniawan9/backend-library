generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id          Int           @id @default(autoincrement())
  title       String
  author      String
  year        Int
  stock       Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]
}

model Member {
  id          Int           @id @default(autoincrement())
  name        String
  studentId   String        @unique
  class       String
  email       String?
  phone       String?
  memberType  MemberType    @default(GUEST)
  joinDate    DateTime      @default(now())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]
  User        User?
}

model Transaction {
  id         Int               @id @default(autoincrement())
  bookId     Int
  memberId   Int
  status     TransactionStatus @default(BORROWED)
  borrowDate DateTime          @default(now())
  dueDate    DateTime
  returnDate DateTime?
  fine       Decimal           @default(0)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  book   Book   @relation(fields: [bookId], references: [id])
  member Member @relation(fields: [memberId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      userRole @default(MEMBER)
  memberId  Int?     @unique
  member    Member?  @relation(fields: [memberId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum userRole {
  ADMIN
  MEMBER
  OFFICER
}

enum TransactionStatus {
  RESERVED
  BORROWED
  RETURNED
  OVERDUE
  LOST
}

enum MemberType {
  MEMBER // Benefit: 3 buku, 14 hari, bisa reservasi
  GUEST // Non-member: 2 buku, 7 hari, ga bisa reservasi
}

